<%- include("./partials/header") %>
<h2>Add a new product here</h2>
<form id="form" action="/" method="post" enctype="multipart/form-data">
    <div class="form-style">
        <div class="form-set">
            <label>Product's category</label>
            <select name="category" required>
                <option disabled selected value> -- select an option -- </option>
                <option value="Livestocks">Livestocks</option>
                <option value="Seedlings">Seedlings</option>
                <option value="Vegetables">Vegetables</option>
                <option value="Food">Food</option>
                <option value="Chef">Chef</option>
                <option value="Bakeries">Bakeries</option>
                <option value="Farm equipments">Farm equipments</option>
                <option value="Agricultural talk">Agricultural talk</option>
                <option value="Others">Others</option>
            </select>
            <label>Name</label>
            <input type="text" name="name" placeholder="Product's name">
            <label>Price</label>
            <input type="text" name="price" placeholder="Product's price">
            <label>Images</label>
            <input type="file" name="image" id="imageInput" multiple accept="image/*">
            <label>Product's description</label>
            <textarea name="description" placeholder="Brief description about product"></textarea> 
            <div class="show">
                <button type="submit">Submit</button>
            </div>
        </div>
    </div>
</form>
<%- include("./partials/footer") %>

<!-- Link to the external JavaScript file -->
<script src="/js/addnew.js"></script>


