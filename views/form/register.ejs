<%- include("../partials/header") %>
<h2>user signup form</h2>
<form id="form" action="/register" method="POST" enctype="multipart/form-data">
    <div class="form-style" >
        <div class="form-set">
            <label>Prefered username</label>
            <input type="text" name="username" placeholder="username">
            <label>Fullname</label>
            <input type="text" name="fullname" placeholder="fullname">
            <label>profile picture</label>
            <input type="file" name="image" placeholder="profile image" alt="user.image">
            <label>Telephone</label>
            <input type="text" name="phone" placeholder="phone number">
            <label>profile's description</label>
            <textarea type="text" name="description" placeholder="brief description about your profile"></textarea>
            <label>Email</label>
            <input type="email" name="email" placeholder="email">
            <label>Pick any number between 01 and 1000</label>
            <input type="number" name="secretCode" placeholder="pick any number">
            <label>Password</label>
            <input id="tog" type="password" name="password" placeholder="password">
            <label>Password again</label>
            <input id="tog2" type="password" name="password2" placeholder="password again">
            <div class="show">
                <!-- <input type="checkbox" onclick="Toggle()"><br>
                <strong>show password</strong><br> -->
                <button>submit</button>
            </div>
            
        </div>
        
    </div>
</form>
<script src="/js/myjs.js"></script>
