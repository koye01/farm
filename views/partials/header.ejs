<body>
<div class="container">
    <div class="nav1">
            <div class="homepage">
                <h2 class="navbar"><a href="/">Home</a></h2>
            </div>
            <input type="checkbox" id="check">
            <label for="check" class="check-btn">
                <i class="fa-solid fa-bars"></i>
            </label>
            <div class="para">
                        <p class="navbar right"><a href="/about">About</a></p>
                    <p class="navbar right"><a href="/contact">Contact us</a></p>

                    <% if(!currentUser){%>
                        <p class="navbar right"><a href="/register">sign up</a></p>
                        <p class="navbar right"><a href="/login">login</a></p>
                    <% }else if(currentUser){ %>
                        <div class="navbar right dropdown">
                            <a role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Notification <span><%=notifications.length%></span>
                            </a>
                            <div class="dropdown-content">
                            <ul>
                                <li>
                                    <a href="/notifications">View past notifications</a>
                                </li>
                                
                                <%notifications.forEach(function(notif){%>
                                    <%if(notif.post.username){%>
                                        <li>
                                            <a href="/<%=notif.post.productId%>"><%=notif.post.username%> Uploaded new items</a>
                                        </li> 
                                    <% }%>
                                <%})%>
                                <!-- comment notifications -->
                                <%notifications.forEach(function(notif){%>
                                    <%if(notif.comment.username){%>
                                        <li>
                                            <a href="/<%=notif.comment.productId%>"><%=notif.comment.username%> commented on your post</a>
                                        </li>
                                    <% }%>
                                    
                                <%})%>
                                <!-- Replies notifications -->
                                <%notifications.forEach(function(notif){%>
                                    <%if(notif.reply.username){%>
                                        <li>
                                            <a href="/<%=notif.reply.productId%>"><%=notif.reply.username%> replied to your post</a>
                                        </li>
                                    <% }%>
                                    
                                <%})%>
                            </ul>    
                                
                                
                            </div>
                        </div>
                        <!-- <p class="navbar right"><a href="">Notification</a><span>10</span></p> -->
                        <p class="navbar right"><a href="/user/<%=currentUser.id%>"><%=currentUser.username%>'s profile</a> </p>
                            <p class="navbar right"><a href="/logout">logout</a></p>
                    <% }%>
            </div>
            
        </div>
        
        <div class="header-page">
                <li></li>
                <div class="logo">
                    <a href="/"><img src="/pics/logo.png" alt="company logo" width="120px" height="120px"/></a>
                </div>
            <div class="front-page">
                    <h2>Welcome to Farmgate Global</h2>
                    <h2>Welcome to Farmgate Nigeria</h2>
                    <p>Your non-stop access to all sort of farm gadgets at farmgate prices</p>
            </div>
            
        </div>
        <% if(success && success.length > 0){ %>
            <div class="success">
                <%=success%>
            </div>
        <% }else if(error && error.length > 0){%>
            <div class="error">
            <%=error%> 
            </div>
            
        <%}%>
</div>
        
    
