<%- include("../partials/header")%>
<head>
    <!-- SEO Keywords -->
    <meta name="description" content="Connect with buyers nationwide and sell livestock and poultry at competitive farm-gate prices on Farmgate Nigeria. Post live goats, sheep, cattle, chickens, turkeys, eggs, and day-old chicks.">
    <meta name="keywords" content="livestock for sale, poultry for sale, live goats, sheep, cattle, broilers, turkeys, eggs, day-old chicks, farm-gate prices, Farmgate Nigeria">
    <meta name="robots" content="index, follow">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://farmgate.com.ng/livestocks">
    <meta property="og:title" content="Livestock and Poultry for Sale | Farmgate Global Marketplace">
    <meta property="og:description" content="Post and sell livestock and poultry across Nigeria at competitive farm-gate prices. Find goats, sheep, cattle, chickens, turkeys, eggs, and day-old chicks.">
    <meta property="og:image" content="<%= image %>">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://farmgate.com.ng/livestocks">
    <meta name="twitter:title" content="Livestock and Poultry for Sale | Farmgate Global Marketplace">
    <meta name="twitter:description" content="Post and sell livestock and poultry across Nigeria at competitive farm-gate prices. Find goats, sheep, cattle, chickens, turkeys, eggs, and day-old chicks.">
    <meta name="twitter:image" content="<%= image %>">

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <!-- Canonical URL -->
    <link rel="canonical" href="<%= canonicalUrl %>">
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Livestock and Poultry for Sale",
    "description": "List of livestock and poultry products available for sale at farm-gate prices across Nigeria.",
    "url": "https://farmgate.com.ng/livestocks",
    "itemListElement": [
        <% livestocks.forEach(function(live, index) { %>
        {
        "@type": "ListItem",
        "position": <%= index + 1 %>,
        "item": {
            "@type": "Product",
            "name": "<%= live.name %>",
            "image": "<%= live.image[0].url %>",
            "description": "<%= live.description %>",
            "url": "https://farmgate.com.ng/<%= live._id %>",
            "offers": {
            "@type": "Offer",
            "price": "<%= live.price || 0 %>",
            "priceCurrency": "NGN",
            "availability": "https://schema.org/InStock"
            }
        }
        }<% if(index < livestocks.length - 1) { %>,<% } %>
        <% }) %>
    ]
    }
    </script>

</head>

