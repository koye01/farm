<%- include("./partials/header") %>
<h2>Edit <%= edit.name%></h2>
<form action="/<%= edit.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-style">
        <label>Name</label>
        <input type="text" name="update[name]" value="<%= edit.name%>">
        <label>Price</label>
        <input type="text" name="update[price]" value="<%= edit.price%>">
        <label>Image</label>
        <input type="file" name="image" required multiple accept="image/*">
        <label>product's description</label>
        <textarea name="update[description]"><%= edit.description%></textarea> 
        <button>Update</button>
    </div>
</form>
<%- include("./partials/footer") %>